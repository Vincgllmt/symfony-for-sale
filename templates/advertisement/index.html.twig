{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block stylesheets %}
    <style>
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        article {
            display: flex;
            flex-direction: column;
            gap: 15px;
            width: 50%;
            border: 1px solid black;
            border-radius: 5px;
            box-shadow: 7px 9px 18px 0px rgba(0,0,0,0.51);
            -webkit-box-shadow: 7px 9px 18px 0px rgba(0,0,0,0.51);
            -moz-box-shadow: 7px 9px 18px 0px rgba(0,0,0,0.51);
            margin: 1rem;
            padding: 1rem;
        }

        article h2 {
            margin: 0;
        }

        article p {
            margin: 0;
        }

        article .articles-dates {
            display: flex;
            justify-content: space-between;
            color: #555555;
        }
    </style>
{% endblock %}

{% block body %}
    <main>
        <h1>Liste de petites annonces</h1>
    {% for advert in advertisements %}
        <article>
            <h2>{{ advert.title }}</h2>
            <p>{{ advert.description }}</p>
            <p>Prix : {{ advert.price }} €</p>
            <p>{{ advert.location }}</p>
            <div class="articles-dates">
                <span>Ajouté le : {{ advert.createdAt|date('d/m/Y') }}</span>
                <span>Mis à jour le : {{ advert.updatedAt|date('d/m/Y') }}</span>
            </div>
        </article>
    {% endfor %}
    </main>
{% endblock %}
